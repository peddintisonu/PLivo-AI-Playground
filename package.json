{
  "name": "plivo-ai-playground",
  "version": "1.0.0",
  "description": "Multi-modal AI playground for document analysis, image processing, and conversation analysis",
  "private": true,
  "scripts": {
    "setup": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && pip install -r requirements.txt",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python main.py",
    "build": "cd frontend && npm run build",
    "start": "npm run dev"
  },
  "keywords": [
    "ai",
    "machine-learning",
    "image-analysis",
    "conversation-analysis",
    "document-summarization",
    "gemini",
    "fastapi",
    "react",
    "tailwind"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/plivo-ai-playground.git"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
